{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env.local",
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "ADMIN_APP_URL",
    "CLIENT_APP_URL",
    "WEB_APP_URL",
    "NEXT_PUBLIC_API_URL"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "dist/**"
      ],
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_ADMIN_URL",
        "NEXT_PUBLIC_CLIENT_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    },
    "db:push": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "db:generate": {
      "cache": true,
      "inputs": [
        "prisma/schema.prisma"
      ]
    }
  }
}