{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env.local",
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_API_URL"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "dist/**"
      ],
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    }
    }
  }
