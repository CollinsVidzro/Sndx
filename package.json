{
  "name": "sndx",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run db:generate",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@sndx/eslint-config": "workspace:*",
    "@sndx/tsconfig": "workspace:*",
    "@sndx/utils": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.7.3"
  },
  "engines": {
		"node": ">=18"
	},
  "packageManager": "bun@1.3.5",

  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "tooling/*",
    "server/*"
  ],
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    },
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "@tailwindcss/oxide",
      "contentlayer2",
      "core-js-pure",
      "esbuild",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
